<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="Evoland" package="fr.ncannasse.evoland" version="1.0.0" company="Nicolas Cannasse" />
	<app path="bin" main="Game" />
	
	<window width="600" height="408" fps="40" background="0x000000" orientation="landscape" />
	
	<source path="src" />
	<source path="lib" />
	<source path="gfx" />
	<source path="sfx" />
	
	<haxelib name="openfl" />
	
	<assets path="music1.mp3" type="music" if="flash || html5" />
	<assets path="music1.ogg" type="music" />
	<assets path="music1.wav" type="music" if="html5" />
	<assets path="gfx" rename="" include="*.png" />
	<assets path="sfx" include="*.mp3|*.ogg|*.wav" if="html5" />
	
	<template path="templates" />
	<haxeflag name="-dce" value="full" if="html5" />
	<haxedef name="js-flatten" if="html5" />
	
</project>
